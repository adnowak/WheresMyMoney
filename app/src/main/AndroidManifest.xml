<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wheresmymoney">

    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.fingerprint"
        android:required="true" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.StartActivity"></activity>
        <activity android:name=".Activities.SettingsActivity" />
        <activity android:name=".Activities.AddAccountActivity" />
        <activity android:name=".Activities.CurrencyActivity" />
        <activity android:name=".Activities.EditCurrencyActivity" />
        <activity android:name=".Activities.AddCurrencyActivity" />
        <activity android:name=".Activities.CurrenciesActivity" />
        <activity android:name=".Activities.ActionActivity" />
        <activity android:name=".Activities.HelperActivity" />
        <activity
            android:name=".Activities.AccountsActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".Activities.AccountActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".Activities.EditBalanceActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".Activities.ExpenseActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".Activities.IncomeActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".Activities.MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>